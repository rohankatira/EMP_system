<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title><%= employee.name %>'s Tasks</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .card {
      max-width: 900px;
      margin: auto;
      border-radius: 1rem;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .btn-back {
      margin-top: 1rem;
    }

    /* For action buttons in table rows */
    .action-btn form,
    .action-btn span {
      display: inline-block;
      min-width: 90px;
      text-align: center;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="card p-4">
      <h2 class="mb-4 text-primary fw-bold">
        <i class="bi bi-list-check"></i> Tasks for <%= employee.name %>
      </h2>

      <% if (tasks.length === 0) { %>
        <div class="alert alert-warning d-flex align-items-center gap-2" role="alert">
          <i class="bi bi-exclamation-triangle-fill fs-4"></i>
          No tasks assigned.
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-bordered table-striped table-hover align-middle text-nowrap">
            <thead class="table-dark">
              <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col" class="text-center">Status</th>
                <th scope="col" class="text-center">Action</th>
              </tr>
            </thead>
            <tbody>
              <% tasks.forEach(task => { %>
                <tr>
                  <td><%= task.title %></td>
                  <td><%= task.description || 'â€”' %></td>
                  <td class="text-center">
                    <% if (task.status === 'Submitted') { %>
                      <span class="badge bg-success">
                        <i class="bi bi-check-circle-fill me-1"></i> Submitted
                      </span>
                    <% } else if (task.status === 'Completed') { %>
                      <span class="badge bg-primary">
                        <i class="bi bi-patch-check-fill me-1"></i> Completed
                      </span>
                    <% } else if (task.status === 'Pending') { %>
                      <span class="badge bg-warning text-dark">
                        <i class="bi bi-hourglass-split me-1"></i> Pending
                      </span>
                    <% } else { %>
                      <span class="badge bg-secondary"><%= task.status %></span>
                    <% } %>
                  </td>
                  <td class="text-center action-btn">
                    <% if (task.status !== 'Submitted') { %>
                      <form method="POST" action="/employee/tasks/submit/<%= task.id %>">
                        <button type="submit" class="btn btn-sm btn-success" title="Submit Task">
                          <i class="bi bi-upload me-1"></i> Submit
                        </button>
                      </form>
                    <% } else { %>
                      <span class="text-success fw-semibold">Submitted</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>

      <a href="/" class="btn btn-secondary btn-back">
        <i class="bi bi-arrow-left-circle me-2"></i> Back to Dashboard
      </a>
    </div>
  </div>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
