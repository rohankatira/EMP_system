<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add Employee</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    .card {
      border-radius: 1rem;
      max-width: 600px;
      margin: auto;
      box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
    }
    h2 i {
      margin-right: 0.5rem;
      color: #0d6efd; /* Bootstrap primary */
    }
    .btn-group {
      margin-top: 1.5rem;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card p-4">
      <h2 class="mb-4 text-primary fw-bold">
        <i class="bi bi-person-plus-fill"></i>
        Add New Employee
      </h2>
      <form action="/add" method="POST" novalidate>
        <div class="mb-3">
          <label for="name" class="form-label fw-semibold">Name <span class="text-danger">*</span></label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter full name" required>
          <div class="invalid-feedback">
            Please enter the employee's name.
          </div>
        </div>
        <div class="mb-3">
          <label for="department" class="form-label fw-semibold">Department <span class="text-danger">*</span></label>
          <input type="text" id="department" name="department" class="form-control" placeholder="Enter department" required>
          <div class="invalid-feedback">
            Please enter the department.
          </div>
        </div>
        <div class="mb-3">
          <label for="salary" class="form-label fw-semibold">Salary (₹) <span class="text-danger">*</span></label>
          <input type="number" id="salary" name="salary" class="form-control" placeholder="Enter salary in ₹" min="0" step="0.01" required>
          <div class="invalid-feedback">
            Please enter a valid salary amount.
          </div>
        </div>
        <div class="btn-group d-flex justify-content-between">
          <button type="submit" class="btn btn-success w-45">
            <i class="bi bi-check-circle me-2"></i> Submit
          </button>
          <a href="/" class="btn btn-secondary w-45">
            <i class="bi bi-arrow-left-circle me-2"></i> Back
          </a>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS Bundle (with Popper for tooltips etc) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Enable Bootstrap form validation UI
    (() => {
      'use strict';
      const forms = document.querySelectorAll('form');
      forms.forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();
  </script>
</body>
</html>
